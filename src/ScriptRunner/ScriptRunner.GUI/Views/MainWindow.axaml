<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScriptRunner.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
        x:Class="ScriptRunner.GUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ScriptRunner.GUI">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel LastChildFill="True">

        <!-- List of available actions, selectable -->
        <StackPanel DockPanel.Dock="Left" Width="200">
            <Label>Actions:</Label>
            <ListBox Items="{Binding Actions}" SelectedItem="{Binding SelectedActionName, Mode=TwoWay}" ></ListBox>
        </StackPanel>

        <!-- Below instead of stack panel will be Reactive UI View Host displaying current action props-->
        <StackPanel DockPanel.Dock="Right">
            <ItemsControl Items="{Binding ActionPanelsCollection}"></ItemsControl>
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding RunScript}" IsEnabled="{Binding ExecutionPending, Converter={x:Static BoolConverters.Not}}">Run</Button>
                <Button Command="{Binding CancelExecution}" IsEnabled="{Binding ExecutionPending}">Cancel</Button>
                <ProgressBar Height="30" Margin="10,0" IsIndeterminate="{Binding ExecutionPending}"></ProgressBar>
            </StackPanel>
            <TextBox IsReadOnly="True"  AcceptsReturn="True" TextWrapping="Wrap" Height="200" Margin="0, 10, 10, 0" Text="{Binding CurrentRunOutput, Mode=OneWay}"  CaretIndex="{Binding OutputIndex, Mode=OneWay}" ></TextBox>
        </StackPanel>
    </DockPanel>

</Window>